N=int(input())
t=[list(map(int,input().split())) for i in range(N)]
t[0:0] = [[0,0,0]]
# print(t)
# print(len(t))

for i in range(N):
  mv=t[i+1][0]-t[i][0]
  d=abs(t[i+1][1]-t[i][1])+abs(t[i+1][2]-t[i][2])
  diff=mv-d
  # print("mv:{}, d:{}, diff:{}".format(mv,d,diff))
  if not (diff>=0 and diff%2==0):
    print("No")
    exit()

print("Yes")
